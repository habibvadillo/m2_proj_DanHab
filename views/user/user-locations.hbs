<h2>See all your locations</h2>

{{#each locations}}
<div>
  <p>Name: {{ this.name }}</p>
  <p>Country: {{ this.location }}</p>
    <form action='locations/{{this._id}}/edit' method="GET">
          <button type="submit">Edit</button>
    </form>  
    <form action='locations/{{this._id}}/delete' method="POST">
          <button type="submit">Delete</button>
    </form>
</div>

{{/each}}
