<header>
  <h2>All locations</h2>

  <form action="/locations" method="GET">
    <label for="country">Country:</label>
    <select name="country" id="country">
      {{#each uniques}}
      <option value="{{ this }}">{{ this }}</option>
      {{/each}}
    </select>
    <button type="submit">Filter</button>
  </form>
</header>
{{#each result}}
<div class="location">
  <p>{{ this.name }}</p>
  <p>{{ this.location }}</p>
  <a href="/locations/{{ this.id }}">More info</a>
</div>
<br />
{{/each}}
